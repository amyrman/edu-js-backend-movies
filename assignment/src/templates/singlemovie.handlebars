<a href="/movies">Back to all movies</a>
<article class="movie">
  <h1>{{ movie.title }}</h1>
  <div class="intro">
    {{{ markdown movie.intro }}}
  </div>
  {{!-- Use Handlebars built-in helper #if to render img only if movie has image --}}
  {{#if movie.image }}
  <img src="{{ movie.image.url }}">
  {{/if }}
</div>
